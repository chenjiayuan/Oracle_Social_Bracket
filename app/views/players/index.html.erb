<body>
	<h2 class="title">Players</h2>
	<div class='create_btn'><%= link_to "New Player", new_player_url %></div>

<div class="detail">
	<%= pluralize(Player.count, 'player has', 'players have') %> been created so far.
</div>
<div class="divider"></div>

<%= will_paginate %>

<table>
    <thead>
    	<tr>
    		<th>Name</th>
    		<th>Email</th>
    		<th>Skill</th>
    		<th>Matches Won</th>
    	</tr>
    </thead>
    <% if Player.any? %>
    <tbody>
    	<% @players.order("created_at DESC").each do |p| %>
        <tr>
        	<% temp = "#{p.first_name} #{p.last_name}" %>
            <td><%= link_to "#{temp}", player_path(p) %></td>
            <td><%= p.email %></td>
            <td><%= p.skill %></td>
            <td><%= p.matches_won %></td>
        </tr>
	    <% end %>
    </tbody>
    <% end %>
</table>

<%= will_paginate %>

</body>
