<body>
	<h3>Tournaments</h3>
	<div class='create-tour'><%=link_to "Create Tournament", new_tournament_url %></div>
<div id="tournaments">

	<% if Tournament.any? %>
        <% count = Tournament.count %>
	    <%= pluralize(count, 'tournament') %> <%= (count > 1) ? "have" : "has" %> been created so far.
	    <table>
	    	<tr>
                <th></th>
	    		<th>Tournament Name</th>
	    		<th># of Players</th>
	    		<th>Status</th>
	    		<th>Winner</th>
	    	</tr>
	    	<% Tournament.order("created_at DESC").each do |t| %>
            <tr>
                <td><%=link_to "Delete", t, method: :delete %></td>
                <td><%= link_to "#{t.name}", t %></td>
                <td><%= t.player_count %></td>
                <td><%= t.active ? "Active" : "Inactive"  %></td>
                <% temp_id = t.winner_id %>
                <td>
	                <% if temp_id != 0 %>
	                    <% p = Player.find(temp_id) %>
	                    Winner: <%= p.first_name %> <%= p.last_name %>
	                <% end %>
            	</td>
            </tr>
		    <% end %>
	    </table>
	<% end %>
</div>
</body>

