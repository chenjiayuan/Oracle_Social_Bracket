<body>
	<h3>Tournaments</h3>
<div id="tournaments">
<% if Tournament.any? %>
    <%= pluralize(Tournament.count, 'tournament') %> have been created so far<br />
    <% Tournament.all.each do |t| %>
            <ul>
                <li>Name: <%= t.name %></li>
                <li>Player Count: <%= t.player_count %></li>
                <li><%= t.active ? "Active" : "Inactive"  %></li>
                <% temp_id = t.winner_id %>
                <% if temp_id != 0 %>
                    <% p = Player.find(temp_id) %>
                    <li>Winner: <%= p.first_name %> <%= p.last_name %></li>
                <% end %>
                <li><%= link_to "Show", t %></li>
            </ul>

    <% end %>
<% end %>
</div>

<div class='create-tour'><%= link_to "Create Tournament", new_tournament_url %></div>

</body>

