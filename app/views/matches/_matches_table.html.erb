<table>
    <thead>
    <tr>
        <th>Match ID</th>
        <th>Player 1</th>
        <th>Player 2</th>
        <th>Winner</th>
    </tr>
    </thead>
    <% if @matches.any? %>
        <tbody>
            <% @matches.each do |m| %>
                <tr data-match-id="<%= m.id %>">
                    <td><%= link_to m.id, match_path(m), class: 'nopjax' %></td>
                    <td><%= link_to m.player1.full_name, player_path(m.player1) if m.player1 %></td>
                    <td><%= link_to m.player2.full_name, player_path(m.player2) if m.player2 %></td>
                    <td><%= link_to m.winner.full_name, player_path(m.winner) if m.winner %></td>
                </tr>
            <% end %>
        </tbody>
    <% end %>
</table>